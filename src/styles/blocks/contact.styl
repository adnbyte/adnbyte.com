.contacto
	height: calc(100vh - 7.5rem)
	display flex
	justify-content center
	flex-direction column
	&__adn
		font-family: NexaLight
		margin-left: 1rem
		font-weight: 200
	h2
		font-size: 4rem
		color black
		margin: 2rem 0
	input
		background: none
		color #000
		padding 1.7rem 1rem
		border 2px solid #000
		transition all .09s linear
		&::-webkit-input-placeholder
			font-size: .9rem
			color black
		&:focus
			outline none
			box-shadow 1px 1px 4px black
			
	input[type="submit"]
		padding: 1.4rem 3rem
		background-color: $primary_2
		border none
		width auto
		color black
		box-shadow 1px 1px 6px black		
	a, p
		font-family: NexaBold !important
		color #000
	&>form>div
		display flex
		padding: 8px 0
		justify-content space-between
		align-items center
		input
			width 100%
			margin-right: 16px
		

.call_to_action
	height calc(100vh - 4rem)
	display flex
	flex-direction column
	align-items center
	div
		flex 1 0 0
		align-self flex-start
		display: flex
		align-items center
	&__slogan
		color $primary_1
		margin: 0
		vertical-align: middle
		font-size: 7rem
		line-height: 7rem
		text-transform: uppercase
		font-family: NexaLight
		font-weight: 200
	a
		margin: 0
		font-size: 1.5rem
		height 3rem
		width: 15rem
	&__label
		font-family: NexaLight
		font-weight: 200