.footer
	background-color black
	padding-top 1rem
	padding-bottom 1rem
	display flex
	align-items top
	&__nav
		flex-basis 30%
		.nav__item
			padding-right .5rem
			color #333
	&__logo
		flex-basis 20%
		text-align: center
		img
			display: inline-block
			width 6rem
	&__contact
		flex-basis 25%
		color #333
		p
			font-family: NexaBold
			font-weight: 800
	&__huella
		flex-basis 25%
		img
			height: 4rem
.copy
	padding 1rem 0
	background-color: #222
	h5
		color #777
		text-align: center
		font-size: .7rem
		font-family: NexaLight
		font-weight: 200
		