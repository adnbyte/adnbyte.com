@import "../../node_modules/normalize.css/normalize.css"

@font-face
   font-family NexaBold
   font-style bold
   src url(/assets/NexaBold.otf)
  
@font-face
   font-family NexaLight
   font-style light
   src url(/assets/NexaLight.otf)

$primary_1 = #ba007c
$primary_2 = #009bdb
$secundary = #733ba0
$text_dark = gray
$text_light = white
$padding_section = 14vw

body
  background: linear-gradient(to right,  $primary_1 0%, $primary_2 100%)
  color: $text_light
  font-family NexaBold, sans-serif
a
	color gray
	text-decoration: none

.button
	text-transform: uppercase
	border: 1px solid white
	font-family: NexaLight
	display inline-block
	width: 12rem
	height: 2rem
	text-align: center
	display flex
	align-items center
	justify-content center
	color white
	transition all .1s linear
	&>span
		margin: 0
	&:hover
		background-color: white
		color $secundary
	&--android
		width: 25rem
		height: auto
		font-size: 2rem
		border-color black
		color black
		&:hover
			background-color: black
			color white
	&__download
		font-size: 1rem
	&--ios
		width: 25rem
		height: auto
		font-size: 2rem
		border-color black
		color white
		background-color: black
		&:hover
			color black
			background: none
	i
		margin 1rem
.social
	&__item
		display inline-block
		text-align center
		vertical-align center
		width 1.8em
		height 1.8em
		line-height: 2em
		background-color gray
		color black
		border-radius: 3px
		margin-right 5px
		&:hover
			background linear-gradient(to right,  $primary_1 0%, $primary_2 100%)
			background-size: 200% 200%;
			animation: linkHover 1s ease infinite;
		
@keyframes linkHover { 
    0%{background-position:0% 50%}
    50%{background-position:100% 50%}
    100%{background-position:0% 50%}
}

.header
	position absolute
	top 0 
	right 0
	left 0
	&__contact
		font-size .8em
		padding-right $padding_section
		padding-left $padding_section
		background-color black
		color $text_dark
		&__content
			height 2.5rem
			display flex
			align-items center
			i
				padding 3px
			&__number
				margin-right 4rem
			&__mail
				margin-right 4rem
.nav
	text-transform: uppercase
	display flex
	padding-right $padding_section
	padding-left $padding_section
	display flex
	align-items center
	justify-content space-between
	height 5rem
	&__item
		display inline-block
		letter-spacing 1px
		font-size .88em
		a
			color white
			padding 1rem
	&__logo
		line-height: 0
		margin 0 3rem
		img
			height: 3.5rem
			
.slider
	background: $secundary
	height calc(100vh - 7.5rem)
	margin-top 7.5rem
	position: relative
	background-image: url("../assets/slide1.jpg")
	background-size cover
	background-position: 50% 50%
	&__button
		color $secundary
		display inline-block
		border 1px solid $secundary
		position absolute
		top calc(50% - 2rem)
		font-size 1.5rem
		height 4rem
		width: 4rem
		line-height: 6rem
		transition all .15s linear
		display flex
		align-items center
		justify-content center
		&:hover
			color white
			background-color: $secundary
	&__next
		right 1rem
	&__prev
		left 1rem
.services
	height 100vh
	display flex
	flex-direction column
	&__title
		text-align: center
		text-transform: uppercase
		font-size: 2.7rem
		line-height: 3.5rem
		letter-spacing 3px
	&__collage
		flex 1 0 0
		display: flex
		flex-direction column
		&__row
			flex 1 0 0
			display flex
			align-items stretch
		&__info
			box-sizing border-box
			flex 2 0 0
			&::before
				content: ""
				background-color white
				color white
				display: block
				height 2px
				width: 30%
		&__1
			flex 4 0 0
			background-image: url("/assets/collage1.jpg")
			background-size: cover
			background-position: center
			position relative
			&>div
				background-color: rgba($primary_1,.8)
				&::after
					content "apps"
				&::before
					content "1"
		&__2
			background-color: #FFF
			flex 2 0 0
		&__3
			background-color: #333
			flex 2 0 0
		&__4
			background-color: #FFF
			flex 3 0 0
			position: relative
			&>div
				background-color: rgba($primary_2, .8)
				&::after
					content "web"
				&::before
					content "2"
		&__5
			background-color: $secundary
			flex 3 0 0
			font-family: NexaLight
			&>span
				padding 0 3rem
				margin-top 1rem
				display block
			&>a
				margin-top 3rem
				margin-left: 3rem
		&__content
			background-color: peru
			position: absolute
			top 1rem
			bottom 1rem
			left 1rem
			right 1rem
			&::after
				display block
				position absolute
				bottom: 3.2rem
				right 2rem
				font-size: 2.6rem
			&::before
				display block
				position absolute
				bottom: 1rem
				width 2rem
				height 2rem
				line-height 3rem
				text-align: right
				padding-top: .5rem
				padding-right .5rem
				font-size: 1rem
				right 1rem
				border-top 1px solid white
				border-right 1px solid white
		
.apps
	height: 70vh
	&__call_to_action
		height: 30vh
		position relative
		bottom 0
		right 0
		left 0
		background-color $secundary
		&__select
			text-transform: uppercase
			font-size: 1.15rem
			letter-spacing 3px
		&__platform
			display flex
			justify-content space-between
			align-items center
	&__description
		width: 30%
		position relative
		left 70%
	
.section
	padding 4rem $padding_section
	box-sizing: border-box
	&--style_1
		background: linear-gradient(to right,  $primary_1 0%, $primary_2 100%)
	&--style_2
		background: rgba(white, .07)
	h3
		text-transform: lowercase
		font-size: 2.5rem
		line-height 3rem
		position relative
		i
			font-size: 5rem
			width: 3rem
			text-align: center
			position absolute
			left -4rem
			top -1rem
	h4
		font-family: NexaLight
	p
		font-family: NexaLight
		font-size: .85em
		line-height 1.3rem
		
	
.footer
	background-color black
	padding-top 1rem
	padding-bottom 1rem